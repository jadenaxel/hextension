{
    "manifest_version": 2,
    "name": "Hired Experts Search Policy Network",
    "version": "1.0.3",
    "description": "Offline Policy Filter",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "storage",
        "alarms",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_title": "Hired Experts Search Policy Network"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        "policy.html"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "hiredexperts@hiredexpertsdr.com",
            "strict_min_version": "109.0"
        }
    },
    "applications": {
        "gecko": {
            "id": "hiredexperts@hiredexpertsdr.com",
            "strict_min_version": "109.0"
        }
    }
}
