{
    "manifest_version": 3,
    "name": "Hired Experts Search Policy Network",
    "version": "1.0.3",
    "description": "Offline Policy Filter",
    "permissions": [
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess",
        "webRequest",
        "webRequestBlocking",
        "storage",
        "alarms"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Hired Experts Search Policy Network"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "policy.html"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "hiredexperts@hiredexpertsdr.com",
            "strict_min_version": "109.0"
        }
    }
}
