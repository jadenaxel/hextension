{
    "manifest_version": 3,
    "name": "Hextension",
    "version": "1.2",
    "description": "Bloquea los juegos ocultos de Google (Pac-Man, Dinosaurio, Snake, etc.)",
    "permissions": [
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess",
        "storage"
    ],
    "host_permissions": [
        "*://www.google.com/*",
        "*://g.co/*",
        "http://localhost:3000/*"
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Hextension"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.google.com/*",
                "*://g.co/*",
                "http://localhost:3000/*"
            ],
            "js": [
                "js/content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}