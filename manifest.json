{
    "manifest_version": 3,
    "name": "Google Game Blocker",
    "version": "1.1",
    "description": "Bloquea los juegos ocultos de Google (Pac-Man, Dinosaurio, Snake, etc.)",
    "permissions": [
        "declarativeNetRequest",
        "storage",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Google Game Blocker"
    },
    "host_permissions": [
        "*://www.google.com/*",
        "*://g.co/*"
    ]
}