{
    "manifest_version": 2,
    "name": "Hextension",
    "version": "0.0",
    "description": "Bloquea los juegos ocultos de Google.",
    "applications": {
        "gecko": {
            "id": "hextension@yonderi"
        }
    },
    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "*://www.google.com/*",
        "*://localhost:3000/*",
        "*://127.0.0.1:3000/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Hextension"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}